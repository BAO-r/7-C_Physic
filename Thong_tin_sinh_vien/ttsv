#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>
#include <malloc.h>

typedef struct
{
    char ma_sv[15];
    char ho_ten[55];
    int nam_sinh;
    char que_quan[105];
    char gt[3];
} sinh_vien;

void nhap(sinh_vien *sv)
{
    printf("Nhap ma sinh vien:");
    gets(sv->ma_sv);
    printf("Nhap ho va ten:   ");
    gets(sv->ho_ten);
    printf("Nhap nam snh:     ");
    scanf("%d",&sv->nam_sinh);
    getchar();
    printf("Nhap que quan:    ");
    gets(sv->que_quan);
    printf("Nhap gioi tinh:   ");
    gets(sv->gt);
}

void out(sinh_vien *sv)
{
    printf("Ma sinh vien:");
    printf("%s\n",sv->ma_sv);
    printf("Ho va ten:");
    printf("%s\n",sv->ho_ten);
    printf("Nam snh:");
    printf("%d\n",sv->nam_sinh);
    printf("Que quan:");
    printf("%s\n",sv->que_quan);
    printf("Gioi tinh:");
    printf("%s\n",sv->gt);
}

int main()
{
    //freopen("C:\\New folder\\input.txt","r",stdin);
    int a,n=1,i=0;
    sinh_vien *sv;
    sv =(sinh_vien*)malloc(10*sizeof(sinh_vien));
    printf("Nhap 1 de nhap.\nNhap 2 de in.\nNhap 0 de ket thuc.\n====Lua chon:");
    scanf("%d",&a);
    getchar();
    while(a!=0)
    {
        if(a==1)
        {
            nhap(&sv[i]);
        }
        else if(a==2)
        {
            out(&sv[i]);
        }
        printf("====Nhap lua chon: ");
        scanf("%d",&a);
        getchar();
        if(a==1)
        {
            i++;
        }
    }
    free(sv);
    return 0;
}
