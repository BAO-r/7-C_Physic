import java.util.Scanner;

public class Hello{
	public static void main(String args[]){
		Scanner scanner = new Scanner(System.in);
		System.out.println("Nhap phuong trinh bac nhat!");
		System.out.print("He so bac nhat: ");
		float s1 = scanner.nextFloat();
		System.out.print("He so tu do: ");
		float s2 = scanner.nextFloat();
		System.out.println("PT: " + s1 + "x + " + s2 + " = 0" );
        System.out.println("=> x = " + (-s2/s1));
	}
}
