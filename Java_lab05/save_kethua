import java.util.ArrayList;
import java.util.List;

// Lá»›p cha Person
class Person {
    protected String name;
    protected String address;
    protected String department;

    public Person(String name, String address, String department) {
        this.name = name;
        this.address = address;
        this.department = department;
    }

    public void print() {
        System.out.println("Name: " + name);
        System.out.println("Address: " + address);
        System.out.println("Department: " + department);
    }
}

// Lá»›p Student káº¿ thá»«a Person
class Student extends Person {
    private ClassRoom classRoom; // má»—i SV thuá»™c vá» má»™t lá»›p
    private Teacher advisor;     // GV hÆ°á»›ng dáº«n (GVCN)

    public Student(String name, String address, String department) {
        super(name, address, department);
    }

    public void setClassRoom(ClassRoom classRoom) {
        this.classRoom = classRoom;
    }

    public void setAdvisor(Teacher advisor) {
        this.advisor = advisor;
    }

    @Override
    public void print() {
        super.print();
        if (classRoom != null)
            System.out.println("Class: " + classRoom.getName());
        if (advisor != null)
            System.out.println("Advisor: " + advisor.getName());
    }
}

// Lá»›p Teacher káº¿ thá»«a Person
class Teacher extends Person {
    private String rank; // TS, ThS, CN

    public Teacher(String name, String address, String department, String rank) {
        super(name, address, department);
        this.rank = rank;
    }

    public String getRank() {
        return rank;
    }

    public String getName() {
        return name;
    }

    @Override
    public void print() {
        super.print();
        System.out.println("Rank: " + rank);
    }
}

// Lá»›p ClassRoom (Ä‘áº·t tÃªn khÃ¡c Class Ä‘á»ƒ trÃ¡nh trÃ¹ng tá»« khÃ³a Java)
class ClassRoom {
    private String name;
    private List<Student> studentList;
    private Teacher advisor;

    public ClassRoom(String name, Teacher advisor) {
        this.name = name;
        this.advisor = advisor;
        this.studentList = new ArrayList<>();
    }

    public String getName() {
        return name;
    }

    public void addStudent(Student s) {
        studentList.add(s);
        s.setClassRoom(this);
        s.setAdvisor(advisor);
    }

    public void printList() {
        System.out.println("Class: " + name);
        System.out.println("Advisor: " + advisor.getName());
        System.out.println("Number of Students: " + studentList.size());
        System.out.println("Student list:");
        for (Student s : studentList) {
            System.out.println("- " + s.name);
        }
    }
}

// Lá»›p kiá»ƒm thá»­
public class Main {
    public static void main(String[] args) {
        Teacher gvcn = new Teacher("Dr. Nguyen Van A", "Hanoi", "Computer Science", "TS");

        ClassRoom lop1 = new ClassRoom("CTK45", gvcn);

        Student s1 = new Student("Tran Van B", "Haiphong", "Computer Science");
        Student s2 = new Student("Le Thi C", "Nam Dinh", "Computer Science");

        lop1.addStudent(s1);
        lop1.addStudent(s2);

        // In thÃ´ng tin lá»›p
        lop1.printList();

        // In thÃ´ng tin sinh viÃªn
        System.out.println("\n=== Student Details ===");
        s1.print();
        System.out.println();
        s2.print();

        // In thÃ´ng tin giÃ¡o viÃªn
        System.out.println("\n=== Teacher Details ===");
        gvcn.print();
    }
}
